<h1>Publishers</h1>

<% if flash[:alert] %>
  <script>
    alert("<%= flash[:alert] %>");
  </script>
<% end %>

<% if flash[:notice] %>
  <script>
    alert("<%= flash[:notice] %>");
  </script>
<% end %>

<%= link_to 'New Publisher', new_publisher_path, class: 'btn btn-new' %>

<div class="comics-grid">
    <% @publishers.each do |publisher| %>
        <div class="comic-card">
            <h2><%= publisher.name%></h2>

            <br> 
            <%= link_to 'Show', publisher_path(publisher), class: 'btn btn-show' %>
            <%= link_to 'Edit', edit_publisher_path(publisher), class: 'btn btn-edit' %>
            <%= link_to 'Destroy', publisher_path(publisher), 
                    data: {turbo_confirm: 'Are you sure?', turbo_method: :delete},
                    class: 'btn btn-destroy' %>
        </div>
    <% end %>
</div>




